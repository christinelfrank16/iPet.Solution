@using Pets.Models;

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>iPet: Owner Profile</title>
	<link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css'>
	<link rel="stylesheet" type="text/css" media="screen" href="main.css">
</head>
<body>
	<div class="container">
		<h1>iPet Pet</h1>
		<h3>@Model.Name</h3>
		<div class="profile">
		<img src="@Model.ImageLink" > 
		</div>
		<p>@Model.Blurb</p>

		<ul>
			@foreach(string characteristic in Model.Characteristics)
			{
				<li>@characteristic</li>
			}
		</ul>
	</div>
	<a href="/">Go Home</a>
</body>
</html>