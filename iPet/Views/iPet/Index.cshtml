@using Pets.Models;

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>iPet: Pet Preparedness</title>
	<link rel="stylesheet" type="text/css" media="screen" href="main.css">
</head>
<body>
	<h1>iPet Home</h1>
	<div id="owners">
		<h3>Owners:</h3>
		@if(Model["ownerList"].Count == 0)
		{
			<p>There are no owners configured.</p>
			<p>Create a new owner <a href="/owners/new">here</a>!</p>
		}
		else
		{
			<p>Click to see owner\'s profile</p>
			@foreach(Owner owner in Model["ownerList"])
			{
				<li><a href="/owners/@owner.Id">@owner.Name</a></li>
			}
			<p></p>
		}
	</div>
	<div id="pets">
		<h3>Pet Preparedness:</h3>
		<h4>Check here for your preparedness for a type of pet!</h4>
		<ul>
			<li><a href="/cats">Cats</a></li>
			<li><a href="/dogs">Dogs</a></li>
		</ul>
		<p>Know a pet in need of a loving home?! Add it for adoption <a href="/pet/new">here</a>!</p>
	</div>

</body>
</html>